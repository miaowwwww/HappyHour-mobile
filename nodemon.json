{
	"restartable": "rs", 
	"ignore": [
		".git",
		"node_modules/**/node_modules"
	],
	"verbose": true, 
	"execMap": { 
		"": "babel-node",
		"js": "babel-node" 
	},
	"events": {
	 "start": "echo 'app start'",
	 "restart": "echo 'app restart'"
	},
	"watch": ["server/*", "server.js"],
	"ext": "js json",
	"legacy-watch": false
}
